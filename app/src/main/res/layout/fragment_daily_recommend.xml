<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#81d8cf"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_fm_daily_recommend_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="31dp"
        android:background="@drawable/et_search_bg_white"
        android:hint="@string/tv_xx"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:elevation="8dp"
        android:autofillHints="string"
        tools:ignore="RtlSymmetry"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fm_daily_recommend_wear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/et_fm_daily_recommend_search" />


</androidx.constraintlayout.widget.ConstraintLayout>