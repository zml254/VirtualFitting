<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:elevation="20dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp">

        <ImageView
            android:id="@+id/iv_rv_item_wear"
            android:layout_width="169dp"
            android:layout_height="165dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_rv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_xx"
            android:textColor="#454545"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@id/iv_rv_item_wear"
            app:layout_constraintLeft_toLeftOf="@id/iv_rv_item_wear"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/tv_rv_item_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_xx"
            android:textColor="#454545"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_rv_item_name"
            app:layout_constraintTop_toBottomOf="@id/tv_rv_item_name"
            android:layout_marginTop="32dp"
            android:layout_marginStart="2dp"/>

        <TextView
            android:id="@+id/tv_rv_item_reference_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_xx"
            android:textColor="#cccccc"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_rv_item_collection"
            app:layout_constraintRight_toLeftOf="@id/tv_rv_item_price"
            android:layout_marginEnd="2dp" />

        <TextView
            android:id="@+id/tv_rv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/iv_rv_item_wear"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_rv_item_collection"
            android:text="@string/tv_xx"
            android:textColor="#81d8cf"
            android:textSize="17sp"
            android:layout_marginEnd="6dp" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>