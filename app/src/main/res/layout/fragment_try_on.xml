<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/try_on_view"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_try_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_xx"
        android:textColor="#393939"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/try_on_view"
        app:layout_constraintStart_toStartOf="@+id/try_on_view"
        app:layout_constraintTop_toTopOf="@+id/try_on_view"
        android:layout_marginStart="35dp"/>

    <View
        android:id="@+id/try_on_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#878787"
        app:layout_constraintTop_toBottomOf="@id/try_on_view"/>

    <ImageView
        android:layout_width="229dp"
        android:layout_height="313dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/try_on_view"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>